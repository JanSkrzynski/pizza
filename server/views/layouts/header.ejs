<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Pizza Place</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navMenu"
        aria-controls="navMenu"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navMenu">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <!-- always available (once youâ€™re authenticated) -->
          <% if (locals.role === "admin" || locals.role === "staff") { %>
          <li class="nav-item"><a class="nav-link" href="/">Dashboard</a></li>
          <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/my-orders">My Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/my-orders">Place Order</a>
          </li>
          <% } %> <% if (!userId) { %>
          <!-- guests only -->
          <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
          <li class="nav-item">
            <a class="nav-link" href="/register">Register</a>
          </li>
          <% } else { %>
          <!-- logged-in users see their links -->
          <% if (role === 'admin') { %>
          <li class="nav-item">
            <a class="nav-link" href="/orders/all">All Orders</a>
          </li>
          <% } %> <% if (role !== 'admin') { %>
          <li class="nav-item">
            <a class="nav-link" href="/orders">My Orders</a>
          </li>
          <% } %> <% if (role !== 'admin') { %>
          <li class="nav-item">
            <a class="nav-link" href="/orders/add">Place Order</a>
          </li>
          <% } %> <% if (role === 'admin') { %>
          <!-- admins get full management menu -->
          <li class="nav-item">
            <a class="nav-link" href="/products">Manage Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/categories">Manage Categories</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users">Manage Users</a>
          </li>

          <% } %>

          <!-- everyone who is logged in can log out -->
          <li class="nav-item">
            <form action="/logout" method="POST" class="d-inline">
              <button class="nav-link btn btn-link" type="submit">
                Logout
              </button>
            </form>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
</header>
