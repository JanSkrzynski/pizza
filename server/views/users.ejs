<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Joined</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(u => { %>
    <tr>
      <td><%= u.email %></td>
      <td><%= u.role %></td>
      <td><%= new Date(u.created_at).toLocaleDateString() %></td>
      <td>
        <form
          action="/users/delete/<%= u.id %>"
          method="POST"
          style="display: inline"
        >
          <button
            type="submit"
            onclick="return confirm('Delete user <%= u.email %>?');"
          >
            Delete
          </button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
<p><a href="/users/add">+ Add New User</a></p>
