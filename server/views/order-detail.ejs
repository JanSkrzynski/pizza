<h1>Order #<%= order.id %></h1>
<p>
  Date: <%= new Date(order.created_at).toLocaleString() %><br />
  Status: <%= order.status %>
</p>

<h2>Products</h2>
<table border="1" cellpadding="6">
  <thead>
    <tr>
      <th>Name</th>
      <th>Qty</th>
      <th>Unit Price</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    <% let total = 0; %> <% order.products.forEach(item => { const line =
    item.quantity * item.price; total += line; %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.quantity %></td>
      <td>€<%= item.price.toFixed(2) %></td>
      <td>€<%= line.toFixed(2) %></td>
    </tr>
    <% }) %>
    <form action="/orders/<%= order.id %>/status" method="POST">
  <select name="status" required>
    <% ["pending","in_progress","completed","cancelled"].forEach(s => { %>
      <option value="<%= s %>"
        <%= order.status===s?"selected":"" %>>
        <%= s.replace("_"," ") %>
      </option>
    <% }) %>
  </select>
  <button type="submit">Change Status</button>
</form>
    <tr>
      <td colspan="3" style="text-align: right"><strong>Total:</strong></td>
      <td><strong>€<%= total.toFixed(2) %></strong></td>
    </tr>
  </tbody>
</table>

<p><a href="/orders">← Back to Orders</a></p>
