<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-danger">All Orders</h1>
    <a href="/orders/add/new" class="btn btn-success">+ Place New Order</a>
  </div>

  <% if (orders.length === 0) { %>
  <div class="alert alert-info">No orders yet.</div>
  <% } else { %>
  <div class="table-responsive">
    <table class="table table-striped align-middle">
      <thead class="table-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Date & Time</th>
          <th scope="col">Status</th>
          <th scope="col">Items</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
        <tr>
          <th scope="row"><%= order.id %></th>
          <td><%= new Date(order.created_at).toLocaleString() %></td>
          <td class="text-capitalize"><%= order.status %></td>
          <td><%= Array.isArray(order.products)%> item(s)</td>
          <td>
            <a href="/orders/<%= order.id %>" class="btn btn-sm btn-primary"
              >Details</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <% } %>

  <p><a href="/" class="btn btn-link">‚Üê Back to Dashboard</a></p>
</div>
