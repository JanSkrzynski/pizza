<h1>Categories</h1>
<% if (categories.length === 0) { %>
<p>No categories yet.</p>
<% } else { %>
<ul>
  <% categories.forEach(cat => { %>
  <li>
    <%= cat.name %> (added <%= new Date(cat.created_at).toLocaleDateString() %>)
  </li>
  <% }) %>
</ul>
<% } %>
<p><a href="/categories/add">+ Add New Category</a></p>
<p><a href="/">← Back to Home</a></p>
